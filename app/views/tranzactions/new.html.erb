<h2>Perform a Transaction</h2>


    <%= simple_form_for([:user, @tranzaction]) do |form| %>
    <div class="row">
      <div class="col-xs-2">
        <%= form.input :amount %>
      </div>
      </div>
      <%= form.submit 'Submit', class: 'btn btn-success' %>
      <%= link_to 'Back', @tranzaction.user, class: 'btn btn-default' %>
    <% end %>
