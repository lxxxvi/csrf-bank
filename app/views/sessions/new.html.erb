<h2>Login</h2>

<div class="jumbotron">
  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :name %><br />
      <%= text_field_tag :name, params[:name] %>
    </div>

    <div class="form-group">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>

    <div class="form-group">
      <%= submit_tag 'Login', class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
